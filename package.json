{
    "name": "yame-api",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.js",
    "scripts": {
        "start": "ENVIRONMENT=local node --nolazy -r ts-node/register src/index.ts",
        "start:watch": "ENVIRONMENT=local nodemon --inspect",
        "start:prod": "ENVIRONMENT=prod nodemon --inspect",
        "build": "tsc",
        "format": "prettier --write '**/*.{ts,json,yml,yaml}'",
        "format:check": "prettier --list-different '**/*.{ts,json,yml,yaml}'",
        "test": "ENVIRONMENT=test jest",
        "test:watch": "ENVIRONMENT=test jest --watch",
        "test:debug": "ENVIRONMENT=test node --inspect-brk node_modules/.bin/jest --runInBand --watch",
        "lint:fix": "tslint --fix -p tsconfig.json -c tslint.json && npm run format"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/atob": "^2.1.1",
        "@types/aws-sdk": "^2.7.0",
        "@types/btoa": "^1.2.2",
        "@types/express": "^4.16.1",
        "@types/graphql-iso-date": "^3.3.1",
        "@types/promisify-node": "^0.4.0",
        "@types/utf8": "^2.1.6",
        "apollo-server-express": "^1.3.0",
        "atob": "^2.1.2",
        "aws-sdk": "^2.406.0",
        "body-parser": "^1.18.2",
        "btoa": "^1.2.1",
        "express": "^4.16.2",
        "graphql": "^0.11.7",
        "graphql-iso-date": "^3.6.1",
        "graphql-tools": "^2.13.0",
        "node-gzip": "^1.1.2",
        "promisify-node": "^0.5.0",
        "utf-8": "^2.0.0",
        "utf8": "^3.0.0",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/node": "^11.9.4",
        "@types/uuid": "^3.4.4",
        "jest": "^24.1.0",
        "nodemon": "^1.18.10",
        "prettier": "^1.16.4",
        "ts-jest": "23.10.5",
        "ts-node": "8.0.2",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.3.3"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
